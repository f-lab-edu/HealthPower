<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <property name="LOG_DIR" value="logs"/>
    <property name="APP_NAME" value="healthpower"/>

    <!-- ì½˜ì†” ì¶œë ¥ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- íŒŒì¼ ì¶œë ¥ (ì¼ë°˜ ë¡œê·¸) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ðŸŸ¡ Logstash ì—°ë™ -->
    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <!-- logstash ì»¨í…Œì´ë„ˆ ì´ë¦„ ê¸°ì¤€ í¬íŠ¸ë¡œ ì „ì†¡ -->
        <destination>localhost:5000</destination>

        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
        <!-- JSON í¬ë§· ë¡œê·¸ ìžë™ êµ¬ì„± -->
        <customFields>{"appName":"healthpower-app"}</customFields>
    </appender>

    <!-- ë£¨íŠ¸ ë¡œê±° ì„¤ì • -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="LOGSTASH"/> <!-- logstash ì—°ë™ ì¶”ê°€ -->
    </root>
</configuration>
